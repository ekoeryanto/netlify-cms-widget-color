{
  "lerna": "2.11.0",
  "packages": [
    "examples",
    "packages/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "commands": {
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "message": "chore(release): publish %s",
      "ignore": [
        "examples"
      ]
    }
  },
  "ignoreChanges": [
    "**/examples/**",
    "**/*.md",
    "**/*.yml",
    "**/*.yaml",
    "**/*.html"
  ]
}
