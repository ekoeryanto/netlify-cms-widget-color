{
  "lerna": "2.11.0",
  "packages": [
    "widgets/*",
    "core/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "commands": {
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": true
    }
  },
  "ignoreChanges": [
    "**/*.md",
    "**/*.yml",
    "**/*.yaml",
    "**/*.html"
  ]
}
